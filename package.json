{
  "name": "TidyPlates Application",
  "description": "Application to update and manage TidyPlatesContinued.",
  "version": "0.1.0.0",
  "icons": { "32": "assets/icons/32.png", "128": "assets/icons/128.png", "256": "assets/icons/256.png" },
  "manifest_version": 2,
  "permissions": [
    "storage",
    "<all_urls>",
    {"fileSystem": ["write", "retainEntries", "directory"]}
  ],
  "optional_permissions": ["contextMenus"],
  "app": {
    "background": {
      "scripts": ["scripts/background.js"]
    }
  }
}